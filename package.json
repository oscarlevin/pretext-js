{
    "name": "pretext-book",
    "private": true,
    "version": "1.0.0",
    "description": "Tools for working with PreTeXt in TypeScript",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "build": "npm run build -ws",
        "test": "jest "
    },
    "jest": {
        "transformIgnorePatterns": [
            "node_modules/(?!unified|bail|is-plain-obj|trough|vfile.*|unist.*|hast.*|property-information|html-void-elements|.*-separated-tokens|.*entities.*|ccount|rehype*|string-width|strip-ansi|ansi-regex|supports-color|rehype|web-namespaces|zwitch|xast*|github-slugger)"
        ],
        "transform": {
            "\\.m?jsx?$": "esbuild-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "haste": {
            "forceNodeFilesystemAPI": true
        },
        "modulePathIgnorePatterns": [
            "/dist/"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/siefkenj/pretext-book.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/siefkenj/pretext-book/issues"
    },
    "homepage": "https://github.com/siefkenj/pretext-book",
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/react": "^18.2.12",
        "@types/react-dom": "^18.2.5",
        "@types/xast": "^1.0.2",
        "esbuild": "^0.18.2",
        "esbuild-jest": "^0.5.0",
        "esbuild-runner": "^2.2.2",
        "jest": "^29.5.0",
        "mkdirp": "^3.0.1",
        "prettier": "^2.8.8",
        "prettier-plugin-pegjs": "^1.0.1",
        "ts-jest": "^29.1.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "buffer": "^6.0.3",
        "comma-separated-tokens": "^2.0.3",
        "github-slugger": "^2.0.0",
        "hast-util-to-string": "^2.0.0",
        "hast-util-whitespace": "^2.0.1",
        "html-react-parser": "^4.0.0",
        "peggy": "^3.0.2",
        "property-information": "^6.2.0",
        "raw.macro": "^0.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "space-separated-tokens": "^2.0.2",
        "unified": "^10.1.2",
        "unist-util-is": "^5.2.1",
        "unist-util-remove": "^3.1.1",
        "unist-util-select": "^4.0.3",
        "unist-util-visit": "^4.1.2",
        "vfile": "^6.0.0",
        "xast-util-from-xml": "^3.0.0",
        "xast-util-to-string": "^2.0.1",
        "xast-util-to-xml": "^3.0.2"
    }
}
